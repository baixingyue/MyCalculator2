<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:text="New Text"
        android:id="@+id/textView_result"
        android:background="#FFEEE0"
        android:textColor="#FFC7C7"
        android:textSize="60dp"
        android:gravity="right|center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDB1B8">

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="7"
            android:id="@+id/button_7"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="8"
            android:id="@+id/button_8"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="9"
            android:id="@+id/button_9"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:id="@+id/button_div"
            android:layout_row="0"
            android:layout_column="3"
            android:text="÷"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="x²"
            android:id="@+id/button_exp"
            android:layout_row="0"
            android:layout_column="4"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="del"
            android:id="@+id/button_del"
            android:layout_row="0"
            android:layout_column="5"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="4"
            android:id="@+id/button_4"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="5"
            android:id="@+id/button_5"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="6"
            android:id="@+id/button_6"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:id="@+id/button_mul"
            android:layout_row="1"
            android:layout_column="3"
            android:text="×"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="sin"
            android:id="@+id/button_sin"
            android:layout_row="1"
            android:layout_column="4"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="^"
            android:id="@+id/button_mi"
            android:layout_row="1"
            android:layout_column="5"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="1"
            android:id="@+id/button_1"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="2"
            android:id="@+id/button_2"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="3"
            android:id="@+id/button_3"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="-"
            android:id="@+id/button_minus"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="cos"
            android:id="@+id/button_cos"
            android:layout_row="2"
            android:layout_column="4"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="√ "
            android:id="@+id/button_exroot"
            android:layout_row="2"
            android:layout_column="5"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="π"
            android:id="@+id/button_pi"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="0"
            android:id="@+id/button_0"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="."
            android:id="@+id/button_dot"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="+"
            android:id="@+id/button_plus"
            android:layout_row="3"
            android:layout_column="3"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="tan"
            android:id="@+id/button_tan"
            android:layout_row="3"
            android:layout_column="4"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:text="="
            android:id="@+id/button_equal"
            android:layout_row="3"
            android:layout_column="5"
            android:layout_columnSpan="2"
            android:textSize="30dp"
            android:layout_rowSpan="2"
            android:background="#F33D6E"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="("
            android:id="@+id/button_leftBracket"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text=")"
            android:id="@+id/button_rightBracket"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="C"
            android:id="@+id/button_c"
            android:layout_row="4"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="%"
            android:id="@+id/button_mod"
            android:layout_row="4"
            android:layout_column="3"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="log"
            android:id="@+id/button_log"
            android:layout_row="4"
            android:layout_column="4"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

    </GridLayout>

</LinearLayout>