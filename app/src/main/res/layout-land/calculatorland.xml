<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text=""
        android:id="@+id/textView_result_land"
        android:background="#FFEEE0"
        android:textColor="#FFC7C7"
        android:textSize="40dp"
        android:gravity="right|center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDB1B8">

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="7"
            android:id="@+id/button_land_7"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="8"
            android:id="@+id/button_land_8"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="9"
            android:id="@+id/button_land_9"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:id="@+id/button_land_div"
            android:layout_row="0"
            android:layout_column="3"
            android:text="÷"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="ln"
            android:id="@+id/button_land_ln"
            android:layout_row="0"
            android:layout_column="4"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="DEL"
            android:id="@+id/button_land_del"
            android:layout_row="0"
            android:layout_column="5"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="4"
            android:id="@+id/button_land_4"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="5"
            android:id="@+id/button_land_5"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="6"
            android:id="@+id/button_land_6"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:id="@+id/button_land_mul"
            android:layout_row="1"
            android:layout_column="3"
            android:text="×"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="sin"
            android:id="@+id/button_land_sin"
            android:layout_row="1"
            android:layout_column="4"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="^"
            android:id="@+id/button_land_mi"
            android:layout_row="1"
            android:layout_column="5"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="1"
            android:id="@+id/button_land_1"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="2"
            android:id="@+id/button_land_2"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="3"
            android:id="@+id/button_land_3"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="-"
            android:id="@+id/button_land_minus"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="cos"
            android:id="@+id/button_land_cos"
            android:layout_row="2"
            android:layout_column="4"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="√"
            android:id="@+id/button_land_exroot"
            android:layout_row="2"
            android:layout_column="5"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="DRG"
            android:id="@+id/button_land_DRG"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="0"
            android:id="@+id/button_land_0"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="."
            android:id="@+id/button_land_dot"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="+"
            android:id="@+id/button_land_plus"
            android:layout_row="3"
            android:layout_column="3"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="tan"
            android:id="@+id/button_land_tan"
            android:layout_row="3"
            android:layout_column="4"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:text="="
            android:id="@+id/button_land_equal"
            android:layout_row="3"
            android:layout_column="5"
            android:layout_columnSpan="2"
            android:textSize="30dp"
            android:layout_rowSpan="2"
            android:background="#F33D6E"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="("
            android:id="@+id/button_land_leftBracket"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text=")"
            android:id="@+id/button_land_rightBracket"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="C"
            android:id="@+id/button_land_c"
            android:layout_row="4"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="n!"
            android:id="@+id/button_land_factorial"
            android:layout_row="4"
            android:layout_column="3"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="log"
            android:id="@+id/button_land_log"
            android:layout_row="4"
            android:layout_column="4"
            android:textSize="25dp"
            android:background="#f16d95"
            android:textColor="#F8ADC4"/>

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="提示"
            android:id="@+id/textView"
            android:layout_row="5"
            android:layout_column="0" />

        <TextView
            android:layout_width="418dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="欢迎使用！"
            android:id="@+id/tip"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnSpan="5" />

    </GridLayout>

</LinearLayout>