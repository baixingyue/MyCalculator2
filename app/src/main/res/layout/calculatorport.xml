<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:text=""
        android:id="@+id/textView_result"
        android:background="#FFEEE0"
        android:textColor="#FFC7C7"
        android:textSize="60dp"
        android:gravity="right|center"/>
    <View
        android:layout_height="2px"
        android:layout_width="fill_parent"
        android:background="#A63232"/>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.88"
        android:background="#FFFFFF"
        >
        <TableRow>
            <Button
                android:text="C"
                android:id="@+id/button_c"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="DEL"
                android:id="@+id/button_del"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="รท"
                android:id="@+id/button_div"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="ร"
                android:id="@+id/button_mul"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="50dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:text="7"
                android:id="@+id/button_7"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="8"
                android:id="@+id/button_8"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="9"
                android:id="@+id/button_9"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="-"
                android:id="@+id/button_minus"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:text="4"
                android:id="@+id/button_4"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="5"
                android:id="@+id/button_5"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="6"
                android:id="@+id/button_6"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="+"
                android:id="@+id/button_plus"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:text="1"
                android:id="@+id/button_1"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="2"
                android:id="@+id/button_2"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="3"
                android:id="@+id/button_3"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="."
                android:id="@+id/button_dot"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
        </TableRow>
        <TableRow>
            <Button
                android:text="("
                android:id="@+id/button_leftBracket"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text=")"
                android:id="@+id/button_rightBracket"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
            <Button
                android:text="0"
                android:id="@+id/button_0"
                android:layout_column="0"
                android:background="@drawable/pinkclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>

            <Button
                android:text="="
                android:id="@+id/button_equal"
                android:layout_column="0"
                android:background="@drawable/redclk"
                android:textColor="#FFFFFF"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:textSize="50dp"/>
        </TableRow>
    </TableLayout>


</LinearLayout>