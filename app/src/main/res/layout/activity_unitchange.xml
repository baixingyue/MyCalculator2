<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.mycalculator2.unitchangeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="请选择您想进行的单位换算："
        android:textColor="#000000"
        android:textSize="30dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:focusable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="长度"
        android:id="@+id/button_length"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/button_temperature" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温度"
        android:id="@+id/button_temperature"
        android:layout_below="@+id/button_length"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="能量"
        android:id="@+id/button_energy"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/button_length"
        android:layout_alignStart="@+id/button_length" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="角度"
        android:id="@+id/button_angle"
        android:layout_below="@+id/button_energy"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
